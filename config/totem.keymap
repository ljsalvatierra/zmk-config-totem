            //                                     ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛   ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛

            bindings = <
        &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp NUMBER_4          &kp NUMBER_5            &kp NUMBER_6    &kp NUMBER_7                 &kp NUMBER_8         &kp NUMBER_9                &kp NUMBER_0
        &trans        &trans        &trans        &trans                &trans                  &kp LEFT_ARROW  &hmr RIGHT_SHIFT DOWN_ARROW  &hmr RCTRL UP_ARROW  &hmr RIGHT_ALT RIGHT_ARROW  &hmr RIGHT_WIN PAGE_UP
&trans  &trans        &trans        &trans        &kp C_BRIGHTNESS_DEC  &kp C_BRIGHTNESS_INC    &kp C_VOL_DN    &kp C_VOL_UP                 &trans               &trans                      &kp PAGE_DOWN           &trans
